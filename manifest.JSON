{
	"name": "Focus",
    "version": "1.1.0",
    "manifest_version": 2,
    "description": "Deletes distractions for the sake of the productivity.",
	"icons": {
        "64": "icons/focus.ico"
    },
	"browser_action": {
        "default_popup": "popup.html",
		"js": ["app.js"]
    },
	"content_scripts":[
		{
			"matches": ["<all_urls>"],
			"js": ["app.js"]
		}
	],
	"permissions": [
        "tabs",
        "background",
        "http://*/*",
        "https://*/*"
    ]
}
